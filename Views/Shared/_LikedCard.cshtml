@model List<WatchMe.Models.Movie>


@if (Model == null || !Model.Any())
{
    <p>No movies available to display.</p>
}
else
{  
    <div class="liked-category-items">
        @foreach (var movie in Model)
        {
            <div class="liked-category-item">
                <!-- Resim -->
                <img src="@($"https://image.tmdb.org/t/p/w500{movie.PosterPath ?? "/default.jpg"}")" class="movie-poster"
                     alt="@movie.Title" />

                  

                <!-- Puanlama -->
                <div class="rating">
                    @movie.Popularity?.ToString("0")
                </div>
            </div>
        }
    </div>
   
}

 <style>/* Movie Poster */
.movie-poster {
    width: 100%;
    height: 300px;
    object-fit: cover;
}

/* Category Container */
.category-items {
    display: grid;
    grid-template-columns: repeat(6, 1fr); /* 6 sütun */
    gap: 15px;
    padding: 20px;
    grid-auto-rows: 1fr; /* Satır yüksekliğini otomatik yap */
    overflow-x: auto; /* Yatay kaydırma ekleyelim */
    white-space: nowrap; /* Her eleman yatayda kayacak */
}

/* Category Item */
.category-item {
    background-color: #333;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    width: 200px; /* Her öğenin sabit genişliği */
    flex-shrink: 0; /* Ögelerin küçülmesini engelle */
}

/* Resim */
.category-item img {
    width: 100%;
    height: 60%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

/* Category Name */
.category-name {
    position: absolute;
    bottom: 10px;
    left: 10px;
    right: 10px;
    padding: 5px;
    color: white;
    font-size: 1.2rem;
    text-align: center;
    background-color: rgba(0, 0, 0, 0.6); /* Arka planda şeffaf bir zemin */
    border-radius: 5px;
}

/* Hover Efekti */
.category-item:hover {
    transform: scale(1.05); /* Büyütme efekti */
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    z-index: 1;
}

/* Rating (Puan) */
.rating {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background-color: #ff9900; /* Turuncu arka plan */
    color: white;
    padding: 5px 10px;
    border-radius: 25px;
    font-size: 1rem;
    display: none; /* Başlangıçta gizli */
}

/* Hover'da Puanı Göster */
.category-item:hover .rating {
    display: block;
}
</style>