@model List<WatchMe.Models.Movie>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Watch Me</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="Views/www.root/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<body>

    <header>

    @if (ViewData["ShowHeaderFooter"] == null || (bool)ViewData["ShowHeaderFooter"]  is bool isHeaderVisible && isHeaderVisible)
    {
        @await Html.PartialAsync("_NetflixNavbar")
    }

    </header>

    <div class="container-fluid" style="margin: 0; padding: 0;">

        @RenderBody()

    </div>

<footer  style="margin-top: 20px;">

     @if (ViewData["ShowHeaderFooter"] == null || (bool)ViewData["ShowHeaderFooter"]  is bool isFooterVisible && isFooterVisible)
    {
        @await Html.PartialAsync("_Footer")
    }
</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
