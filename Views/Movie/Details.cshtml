@model WatchMe.Models.Movie

<h1>@Model.Title</h1>
<p>@Model.Overview</p>

<p>Release Date: @(Model.ReleaseDate?.ToString("yyyy-MM-dd") ?? "Unknown")</p>

<h3>Genres:</h3>
<ul>
    @if (Model.MovieGenres != null)
    {
        @foreach (var genre in Model.MovieGenres.Select(mg => mg.Genre))
        {
            <li>@genre.Name</li>
        }
    }
</ul>

<h3>Comments:</h3>
<ul>
    @if (Model.MovieComments != null)
    {
        @foreach (var comment in Model.MovieComments)
        {
            <li>@(comment.User?.Nickname ?? "Unknown"): @comment.Comment</li>
        }
    }
</ul>
