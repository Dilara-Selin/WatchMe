@using Microsoft.EntityFrameworkCore
@using WatchMe.Data
@using WatchMe.Models
@using WatchMe.Controllers
@using WatchMe.Services

@inject AppDbContext _context
@model List<WatchMe.Models.Movie>

<div class="container my-5">
    <div class="profile-container">
        <div class="profile-content">
            <h2>Hoşgeldin, @ViewData["UserName"]</h2> <!-- Hoşgeldin mesajı -->
            <p>E-mail: @ViewData["UserEmail"]</p> <!-- Kullanıcı e-posta bilgisi -->
        </div>
    </div>
</div>

<!-- Liked Movies Section -->
<section>
    <h3>Beğendiklerin</h3>
    @if (Model == null || !Model.Any())
    {
        <p>No liked movies available.</p>
    }
    else
    {
        @await Html.PartialAsync("_LikedCard", Model)
    }
</section>

<!-- Beğenmediklerim Section -->
<section>
    <h3>Beğenmediklerim</h3>
    @if (Model == null || !Model.Any()) 
    {
        <p>No unliked movies available.</p>
    }
    else
    {
        @await Html.PartialAsync("_LikedCard", Model)
    }
</section>

<!-- Watched Movies Section -->
<section>
    <h3>İzlenenler</h3>
    @if (Model == null || !Model.Any()) 
    {
        <p>No watched movies available.</p>
    }
    else
    {
        @await Html.PartialAsync("_LikedCard", Model)
    }
</section>

<!-- Commented Movies Section -->
<section>
    <h3>Yorum Yaptıklarım</h3>
    @if (Model == null || !Model.Any()) 
    {
        <p>No commented movies available.</p>
    }
    else
    {
        @await Html.PartialAsync("_LikedCard", Model)
    }
</section>

<!-- Profile Styles -->
<style>
    /* Profil alanı ve genel yerleşim */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh; /* Profil için dikey yüksekliği ayarladık */
    }

    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 500px;
        width: 100%;
        background-color: #333;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .profile-content {
        color: white;
        text-align: center;
    }

    /* Profil Başlık ve E-posta */
    .profile-content h2 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .profile-content p {
        font-size: 16px;
        color: #bbb;
    }

    /* Bölüm Başlıkları */
    section h3 {
        font-size: 20px;
        color: white;
        margin-top: 40px;
    }

    /* Divider */
    hr {
        margin: 20px 0;
        border: none;
        height: 1px;
        background-color: #444;
    }
</style>